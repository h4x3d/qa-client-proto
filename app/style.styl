@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,600')

body, html
  margin 0
  font-family 'Open Sans', sans-serif
  padding 1em
  color rgba(0, 0, 0, 0.8)

.question
  border-bottom 1px solid #f0f0f0
  padding 1em 0

  h3
    margin 0 0 0.25em 0
    a
      color inherit

.question__meta
  font-size 0.8em

.question__meta__avatar,
.question__meta__info
  display table-cell
  vertical-align middle

.question__meta__avatar
  width 40px
  height 40px

  .avatar
    vertical-align top
    width 100%
    height 100%

.question__meta__info
  padding-left 0.5em
  .timestamp
    margin-left 0.5em
a
  color #1eaff0
  text-decoration none
  &:hover
    text-decoration underline

.avatar
  width 30px
  height 30px
  border-radius 50%

.username
  font-weight 600

.timestamp
  color rgba(0, 0, 0, 0.3)
